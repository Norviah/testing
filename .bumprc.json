{
  "tasks": {
    "pre": [
      {
        "name": "Checking linting",
        "command": "pnpm run lint:check"
      },
      {
        "name": "Checking formatting",
        "command": "pnpm run format:check"
      },
      {
        "name": "Building application",
        "command": "rm -rf dist && pnpm run build:win"
      }
    ],
    "post": []
  },
  "provider": {
    "type": "json",
    "path": "package.json",
    "key": "version"
  },
  "types": [
    {
      "type": "feat",
      "name": "Features",
      "hidden": false
    },
    {
      "type": "fix",
      "name": "Bug Fixes",
      "hidden": false
    },
    {
      "type": "revert",
      "name": "Reverted",
      "hidden": false
    },
    {
      "type": "refactor",
      "name": "Refactor",
      "hidden": false
    },
    {
      "type": "build",
      "name": "Build System",
      "hidden": false
    },
    {
      "type": "init",
      "name": "Init",
      "hidden": false
    },
    {
      "type": "remove",
      "name": "Removed Features",
      "hidden": false
    },
    {
      "type": "chore",
      "hidden": true
    },
    {
      "type": "docs",
      "hidden": true
    }
  ],
  "prompt": false,
  "unreleasedHeader": "Unreleased",
  "breakingHeader": "âš  Breaking Changes",
  "includeBody": false,
  "includeNonConventionalCommits": true,
  "tag": "v{{after}}",
  "releaseSubject": "chore(release): {{tag}}",
  "changelogSubject": "docs(changelog): {{tag}}",
  "commitOrder": "default"
}