{
	"extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
	"include": [
		"src/renderer/**/*.ts",
		"src/renderer/**/*.tsx",
		"src/preload/*.d.ts"
	],
	"compilerOptions": {
		"composite": true,
		"jsx": "react-jsx",
		"baseUrl": ".",
		"paths": {
			"@renderer/*": ["src/renderer/src/*"]
		}
	}
}
